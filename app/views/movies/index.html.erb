<h1>Movies</h1>

<h3>Our Blog has <%= Movie.public_count%> movies and counting</h3>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= link_to "Show", movie %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<br>
<hr>
<%= link_to "New Movie", new_movie_path %>
